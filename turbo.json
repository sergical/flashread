{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "build:firefox": {
      "dependsOn": ["^build"],
      "outputs": ["dist-firefox/**"]
    },
    "build:all": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "dist-firefox/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    }
  }
}
