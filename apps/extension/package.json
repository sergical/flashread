{
  "name": "@flashread/extension",
  "version": "1.1.0",
  "description": "RSVP Speed Reader Browser Extension - Read at 500-900+ WPM",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:firefox": "TARGET_BROWSER=firefox vite build",
    "build:all": "npm run build && npm run build:firefox",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "chrome-extension",
    "firefox-addon",
    "speed-reading",
    "rsvp",
    "productivity"
  ],
  "license": "MIT",
  "dependencies": {
    "@flashread/core": "workspace:*",
    "@mozilla/readability": "^0.6.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.33",
    "@types/webextension-polyfill": "^0.12.4",
    "@vitest/coverage-v8": "^4.0.17",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-web-extension": "^4.5.0",
    "vitest": "^4.0.17"
  }
}
